<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@drawable/arkaplan">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TEMALAR"
        android:gravity="center_horizontal"
        android:textColor="#FF0000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tema Seçimi"
        android:textColor="#FF0000"
        android:textSize="18sp"
        android:layout_marginTop="16dp" />
    <RadioGroup
        android:id="@+id/themeRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/themeDefault"
            android:text="Varsayılan"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:buttonTint="#000000"
            />
        <RadioButton
            android:id="@+id/themeBlackWhite"
            android:text="Siyah-Beyaz"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:buttonTint="#000000"
            />
        <RadioButton
            android:id="@+id/themeRedPink"
            android:text="Kırmızı-Pembe"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:buttonTint="#000000"
            />
        <RadioButton
            android:id="@+id/themeBrainRot"
            android:text="BrainRot"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:buttonTint="#000000"
            />
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="X İkonu Seçimi"
        android:textColor="#FF0000"
        android:buttonTint="#000000"
        android:textSize="18sp"
        android:layout_marginTop="16dp" />
    <RadioGroup
        android:id="@+id/xImageRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/xImageDefault"
            android:text="Varsayılan X"
            android:textColor="#000000"
            android:buttonTint="#000000"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <RadioButton
            android:id="@+id/xImageRedPink"
            android:text="Pembe X"
            android:textColor="#000000"
            android:buttonTint="#000000"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <RadioButton
            android:id="@+id/xImageBrainRot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BrainRot X"
            android:textColor="#000000"
            android:buttonTint="#000000"/>
        <RadioButton
            android:id="@+id/xImageGray"
            android:text="Gri X"
            android:textColor="#000000"
            android:buttonTint="#000000"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="O İkonu Seçimi"
        android:textColor="#FF0000"
        android:textSize="18sp"
        android:layout_marginTop="16dp" />
    <RadioGroup
        android:id="@+id/oImageRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/oImageDefault"
            android:text="Varsayılan O"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:buttonTint="#000000"
            />
        <RadioButton
            android:id="@+id/oImageRedPink"
            android:text="Pembe O"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:buttonTint="#000000"
            />
        <RadioButton
            android:id="@+id/oImageBrainRot"
            android:text="BrainRot O"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:buttonTint="#000000"
            />
        <RadioButton
            android:id="@+id/oImageGray"
            android:text="Gri O"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:buttonTint="#000000"
            />
    </RadioGroup>

    <Button
        android:id="@+id/saveSettingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kaydet"
        android:layout_marginTop="24dp" />

</LinearLayout>