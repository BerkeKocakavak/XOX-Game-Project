<resources>
    <!-- Oyun butonu için stil -->
    <style name="GameCellButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:contentDescription">Game Cell</item>
    </style>



    <!-- Tema: Brainrot -->
    <style name="AppTheme_Brainrot" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@drawable/tema_brainrot</item>
    </style>

    <!-- Tema: Siyah Beyaz -->
    <style name="AppTheme_SiyahBeyaz" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@drawable/tema_siyahbeyaz</item>
    </style>

    <!-- Tema: Kırmızı Pembe -->
    <style name="AppTheme_KirmiziTema" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@drawable/tema_kirmizipembe</item>
    </style>

    <!-- Varsayılan Tema -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
</resources>
